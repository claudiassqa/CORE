<section>
    <h2>Users</h2>
    <table>
        <% for (let i in users) { %>
        <tr>
            <td>
                <a href="/users/<%= users[i].id %>" ><%= users[i].username %></a>
                <%= users[i].isAdmin ? "(admin)" : "" %>
            </td>
            <td>
                <a href="/users/<%= users[i].id %>/edit" class="button-2">Editar</a>
            </td>
            <td>
                <a href="/users/<%= users[i].id %>?_method=DELETE"
                onClick="return confirm('Delete user: <%= users[i].username %>');"
                class="button-2">Borrar</a>
            </td>
        </tr>
        <%  } %>
    </table>
    <%# botÃ³n de crear un nuevo usuario solo aparece a admin %>
    <% if(locals.loginUser?.isAdmin){ %>
        <a href="/users/new" class="button-2">Create new user</a>
    <% } %>
</section>